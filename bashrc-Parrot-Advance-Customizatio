# Functions for dynamic output
mkcd() {
    echo -e "\033[36mğŸ“‚ Creating and moving into directory: $1\033[0m" && mkdir -p "$1" && cd "$1"
}

extract() {
    if [ -f "$1" ]; then
        case "$1" in
        *.tar.bz2) echo -e "\033[33mğŸ“¦ Extracting tar.bz2...\033[0m" && tar xjf "$1" ;;
        *.tar.gz) echo -e "\033[32mğŸ“¦ Extracting tar.gz...\033[0m" && tar xzf "$1" ;;
        *.bz2) echo -e "\033[36mî«¯ Extracting bz2...\033[0m" && bunzip2 "$1" ;;
        *.rar) echo -e "\033[35mğŸ“¦ Extracting rar...\033[0m" && unrar x "$1" ;;
        *.gz) echo -e "\033[33mî«¯ Extracting gz...\033[0m" && gunzip "$1" ;;
        *.tar) echo -e "\033[31mğŸ“¦ Extracting tar...\033[0m" && tar xf "$1" ;;
        *.zip) echo -e "\033[34mğŸ“¦ Extracting zip...\033[0m" && unzip "$1" ;;
        *.7z) echo -e "\033[32mî«¯ Extracting 7z...\033[0m" && 7z x "$1" ;;
        *) echo -e "\033[31mâŒ Cannot extract $1\033[0m";;
        esac
        echo -e "\033[32mâœ… Extraction complete: $1\033[0m"
    else
        echo -e "\033[31mâŒ $1 is not a valid file\033[0m"
    fi
}


#==================== SYSTEM INFORMATION ====================#
# Function to animate text with a given delay and color
animate_text() {
  local text="$1"
  local delay="${2:-0.01}" # Default delay of 0.01s per character
  local color="$3"
  for ((i = 0; i < ${#text}; i++)); do
    printf "%b%s\033[0m" "$color" "${text:i:1}"
    sleep "$delay"
    done
    echo "" # Add a newline after the text
}

# Display Parrot Security Mode Header with animation and red color
animate_text "  ïŒ©  PARROT SECURITY MODE ACTIVE" 0.03 "\033[1;31m"

# Add a line gap
echo ""

# Display Time, Date, and System Info with faster animation and distinct colors
sleep 0.3
animate_text " ï€—  : $(date +'%I:%M:%S %p')" 0.02 "\033[0;32m"
sleep 0.3
animate_text " ó°ªš  : $(date +'%a, %b %d, %Y')" 0.02 "\033[0;32m"
sleep 0.3
animate_text " ï‡«  : $(hostname -I | awk '{print $1}')" 0.02 "\033[1;35m"
sleep 0.3
animate_text " î°™  : $(free -h | awk '/Mem/{print $3 "/" $2}')" 0.02 "\033[0;33m"
sleep 0.3
animate_text " î™  : $(df -h | awk '$NF=="/"{print $3 "/" $2}')" 0.02 "\033[1;33m"

# Function to generate random colors
get_random_color() {
  local colors=(
    "\033[0;31m"  # Red
    "\033[0;32m"  # Green
    "\033[0;33m"  # Yellow
    "\033[0;34m"  # Blue
    "\033[0;35m"  # Magenta
    "\033[0;36m"  # Cyan
    "\033[0;37m"  # White
  )
  echo "${colors[$((RANDOM % ${#colors[@]}))]}"
}

